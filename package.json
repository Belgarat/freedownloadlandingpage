{
  "name": "booklandingstack",
  "version": "2.0.0-beta.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3010",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:headless": "playwright test --headed=false",
    "test:ci": "playwright test --reporter=html --project=chromium",
    "test:e2e": "playwright test --project=chromium",
    "test:auto": "gtimeout 300s npx playwright test --project=chromium || exit 1",
    "test:component": "gtimeout 60s npx playwright test tests/components/ --project=chromium || exit 1",
    "test:landing": "gtimeout 30s npx playwright test tests/landing-page.e2e.spec.ts --project=chromium || exit 1",
    "test:ab-testing": "gtimeout 60s npx playwright test tests/ab-testing*.e2e.spec.ts --project=chromium || exit 1",
    "test:api": "gtimeout 30s npx playwright test tests/api-*.e2e.spec.ts --project=chromium || exit 1",
    "test:admin": "gtimeout 30s npx playwright test tests/admin.e2e.spec.ts --project=chromium || exit 1",
    "test:auth": "gtimeout 30s npx playwright test tests/auth.e2e.spec.ts --project=chromium || exit 1",
    "test:analytics": "gtimeout 30s npx playwright test tests/analytics-*.e2e.spec.ts --project=chromium || exit 1",
    "test:storage": "gtimeout 60s npx playwright test tests/storage.e2e.spec.ts --project=chromium || exit 1",
    "test:swagger": "gtimeout 30s npx playwright test tests/swagger-docs.e2e.spec.ts --project=chromium || exit 1",
    "test:cookie": "gtimeout 30s npx playwright test tests/cookie-*.e2e.spec.ts --project=chromium || exit 1",
    "test:download": "gtimeout 30s npx playwright test tests/landing-page.e2e.spec.ts --grep='Download Page' --project=chromium || exit 1",
    "test:all": "gtimeout 600s npx playwright test --project=chromium || exit 1",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "deploy:development": "vercel --target=preview",
    "deploy:production": "vercel --prod --yes",
    "db:backup": "curl -X POST http://localhost:3010/api/sqlite/backup",
    "db:info": "curl http://localhost:3010/api/sqlite/backup",
    "setup:local": "./scripts/setup-local.sh",
    "setup:sqlite": "./scripts/setup-sqlite.sh",
    "setup:new": "./scripts/setup-new-instance.sh",
    "config:migrate": "tsx lib/config-migration.ts migrate",
    "config:rollback": "tsx lib/config-migration.ts rollback",
    "config:cleanup": "tsx lib/config-migration.ts cleanup",
    "backup": "./scripts/backup.sh",
    "backup:list": "ls -lh /tmp/backups/development.db.backup.* 2>/dev/null | sort -r || echo 'Nessun backup trovato'",
    "backup:restore": "./scripts/restore.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/extension-text-align": "^3.0.9",
    "@tiptap/extension-underline": "^3.0.9",
    "@tiptap/pm": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/swagger-jsdoc": "^6.0.4",
    "@vercel/blob": "^1.1.1",
    "autoprefixer": "^10.4.16",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "chokidar": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "15.0.0",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "resend": "^4.8.0",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.10.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chokidar": "^1.7.5",
    "eslint": "^8",
    "eslint-config-next": "15.0.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
